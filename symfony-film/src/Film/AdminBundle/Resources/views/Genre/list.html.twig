{# src\Film\AdminBundle\Resources\views\Genre\list.html.twig #}
{% extends 'FilmBiblioBundle::layout.html.twig' %}

{% block title %}Liste des genres{% endblock %}

{% block body %}

<h1>Liste des films :</h1>
<ul>
{% for genre in genres %}
    <li>
        <a href="{{ path('admin_genre_modif', {'id': genre.id}) }}">{{ genre.titre }}</a>
        <a href="{{ path('admin_genre_supprimer', {'id': genre.id}) }}">(x)</a>
    </li>
{% endfor %}
</ul>
<a href="{{ path('admin_genre_ajout') }}">Ajouter</a>

{% endblock %}