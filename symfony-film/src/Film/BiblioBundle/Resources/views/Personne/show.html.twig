{# src\Film\BiblioBundle\Resources\views\Personne\show.html.twig #}

{% extends 'FilmBiblioBundle::layout.html.twig' %}

{% block title %}{{ personne.prenom }}{{ personne.nom }}{% endblock %}

{% block body %}




    <div class="caption-full">
    <a href="{{ path('page_cine') }}" class="btn btn-default monwell">Retour</a>
		<h1 class="monh1">Film de {{ personne.prenom }} {{ personne.nom }}</h1>



        <div class="monwell">

        <ul class="liste">
            {% for film in films %}
            <div class="thumbnail">
                <div class="caption-full">
                    <li style="list-style: none;">
                        <h4 class="pull-right">{{ film.genre }}</h4>
                        <h4><a href="{{ path('page_film', {'id': film.id}) }}">{{ film.titre }}</a></h4>
                        <p>{{ film.synopsis }}</p>
                        <div class="ratings">
                            <p>Date de sortie : {{ film.dateSortie|date("d/m/Y") }}</p>
                        </div>
                    </li>
                </div>
            </div>
            {% endfor %}
        </ul>
{% endblock %}